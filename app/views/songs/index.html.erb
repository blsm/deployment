<h1>Listing songs</h1>

<table>
  <tr>
    <th>Tittle</th>
    <th>Artist</th>
    <th>Genre</th>
    <th>Creation date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.tittle %></td>
    <td><%= song.artist %></td>
    <td><%= song.genre %></td>
    <td><%= song.creation_date %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

